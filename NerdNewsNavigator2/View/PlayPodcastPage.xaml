<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.ViewModel"
             x:Class="NerdNewsNavigator2.View.PlayPodcastPage"
             x:DataType="viewmodel:PlayPodcastViewModel"
             xmlns:media="clr-namespace:CommunityToolkit.Maui.MediaView;assembly=CommunityToolkit.Maui.MediaView"
             Title="">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="True"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <VerticalStackLayout Padding="3">
        <media:MediaView  HeightRequest="240" WidthRequest="320" ShouldAutoPlay="True" ShouldKeepScreenOn="True"  Source="{Binding Url}"></media:MediaView>
    </VerticalStackLayout>
</ContentPage>