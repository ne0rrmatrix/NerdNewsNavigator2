<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:NerdNewsNavigator2.Model"
             xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.ViewModel"
             x:Class="NerdNewsNavigator2.View.TabletPodcastPage"
             x:DataType="viewmodel:TabletPodcastViewModel"
             BackgroundColor="Wheat"
               Shell.NavBarIsVisible="False"
             Title="">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="False"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <CollectionView ItemsSource="{Binding Podcasts}" Header="{Binding IsBusy}" Margin="5" BackgroundColor="Wheat" SelectionMode="None">
        <CollectionView.HeaderTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Padding="20" HorizontalOptions="Center" VerticalOptions="Center"
                               IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsBusy}"
                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsBusy}"
                           HorizontalTextAlignment="Center"
                           TextColor="Black"
                               Text="Loading..."></Label>
                    <ActivityIndicator IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsBusy}" IsRunning="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsBusy}"
                   Color="Red" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.HeaderTemplate>
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="{Binding Orientation}"/>
        </CollectionView.ItemsLayout>
       
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Podcast">
                <Frame  BackgroundColor="White" Margin="55" WidthRequest="375">
                    <Grid IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BaseViewModel}}, Path=IsNotBusy}" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer 
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TabletPodcastViewModel}}, Path=TapCommand}"
                            CommandParameter="{Binding Url}"/>
                        </Grid.GestureRecognizers>
                        <Label Grid.Row="0" VerticalOptions="Center" Padding="5" Margin="10" HorizontalOptions="Start"
                               
                        Text="{Binding Title}"
                        TextColor="Black" 
                        FontSize="10" 
                            FontAttributes="Bold"
                        LineBreakMode="WordWrap"/>
                        <Image Grid.Row="1" Grid.ColumnSpan="2"
                                       Aspect="AspectFit" 
                                       HeightRequest="300" 
                                       WidthRequest="300">
                            <Image.Source>
                                <UriImageSource Uri="{Binding Image}"
                                                    CacheValidity="40"
                                                    CachingEnabled="True"/>
                            </Image.Source>
                        </Image>
                        <Label Grid.Row="2" Grid.ColumnSpan="2" Padding="10"
                              WidthRequest="320"
                               HeightRequest="240"
                               TextColor="Black"
                               
                               Text="{Binding Description}"
                               FontSize="10"
                               LineBreakMode="WordWrap"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>