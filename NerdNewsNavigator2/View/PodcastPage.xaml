<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:NerdNewsNavigator2.Model"
             xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.ViewModel"
             x:Class="NerdNewsNavigator2.View.PodcastPage"
             x:DataType="viewmodel:PodcastViewModel"
             Title="PodcastPage">
    <CollectionView  ItemsSource="{Binding Podcasts}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Podcast">
                <HorizontalStackLayout Padding="10" Spacing="10">
                    <Image Grid.RowSpan="2"
                        Aspect="AspectFill"
                        HeightRequest="100"
                        WidthRequest="100"
                        Source="{Binding Image}">
                    </Image>
                    <VerticalStackLayout Padding="10" Spacing="4" VerticalOptions="Center">
                        <Label Text="{Binding Title}" FontSize="14"/>
                        <Label Text="{Binding Description}" FontSize="10" LineBreakMode="WordWrap" MaximumWidthRequest="225"></Label>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>