<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NerdNewsNavigator2.View.MostRecentShowsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:media="clr-namespace:NerdNewsNavigator2.Controls"
    xmlns:model="clr-namespace:NerdNewsNavigator2.Model"
    xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.ViewModel"
    Title="{Binding Title}"
    x:DataType="viewmodel:MostRecentShowsViewModel"
    BackgroundColor="#34AAD2"
    Loaded="ContentPage_Loaded">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="{OnPlatform Default=false, MacCatalyst=true}" IsVisible="{OnPlatform Default=false, MacCatalyst=true}" />
    </Shell.BackButtonBehavior>
    <media:ShowControl Source="{Binding MostRecentShows}" />

</ContentPage>