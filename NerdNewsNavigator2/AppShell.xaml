<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NerdNewsNavigator2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NerdNewsNavigator2.View"
    Title="NerdNewsNavigator"
    FlyoutBackgroundColor="LightGray"
    FlyoutHeaderBehavior="CollapseOnScroll"
    FlyoutWidth="200">

    <Shell.MenuItemTemplate>

        <DataTemplate>

            <Grid
                Margin="5"
                ColumnDefinitions="50,*"
                RowDefinitions="50">
                <Image
                    BackgroundColor="LightGray"
                    HeightRequest="50"
                    Source="{Binding Icon}"
                    WidthRequest="50" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="40"
                    Text="{Binding Title}"
                    TextColor="Black" />
            </Grid>

        </DataTemplate>

    </Shell.MenuItemTemplate>

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:PodcastPage}"
            Icon="house.png"
            IsVisible="{OnPlatform WinUI=false,
                                   Default=true}" />
        <ShellContent
            Title="Recent"
            ContentTemplate="{DataTemplate local:MostRecentShowsPage}"
            Icon="history.png"
            IsVisible="{OnPlatform WinUI=false,
                                   Default=true}" />
        <ShellContent
            Title="Downloads"
            ContentTemplate="{DataTemplate local:DownloadedShowPage}"
            Icon="download.png"
            IsVisible="{OnPlatform WinUI=false,
                                   Default=true}" />
        <ShellContent
            Title="Live"
            ContentTemplate="{DataTemplate local:LivePage}"
            Icon="live_broadcasting.png"
            IsVisible="{OnPlatform WinUI=false,
                                   Default=true}" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Icon="settings.png"
            IsVisible="{OnPlatform WinUI=false,
                                   Default=true}" />
    </TabBar>
    <ShellContent ContentTemplate="{DataTemplate local:PodcastPage}" />
    <MenuItem
        Clicked="GotoFirstPage"
        IconImageSource="house.png"
        Text="Home" />
    <MenuItem
        Clicked="GotoMostRecentShowPage"
        IconImageSource="history.png"
        Text="Recent" />
    <MenuItem
        Clicked="GotoDownloadedPage"
        IconImageSource="download.png"
        Text="Downloads" />
    <MenuItem
        Clicked="GotoLivePage"
        IconImageSource="live_broadcasting.png"
        Text="Live" />
    <MenuItem
        Clicked="GotoAddPage"
        IconImageSource="settings.png"
        Text="Settings" />
</Shell>
