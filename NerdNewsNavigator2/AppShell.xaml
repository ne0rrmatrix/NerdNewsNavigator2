<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NerdNewsNavigator2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:local="clr-namespace:NerdNewsNavigator2.View"
    FlyoutHeaderBehavior="CollapseOnScroll"
     Shell.NavBarIsVisible="False"
    FlyoutWidth="200"
    FlyoutBackgroundColor="LightGray">

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*" Margin="5">
                <Image Source="{Binding Icon}" WidthRequest="50" BackgroundColor="LightGray"/>
                <Label Grid.Column="1" Text="{Binding Title}" FontSize="16" TextColor="Black" FontAttributes="Bold"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*" Margin="5">
                <Image Source="{Binding Icon}" WidthRequest="50" BackgroundColor="LightGray"/>
                <Label Grid.Column="1" Text="{Binding Title}" FontSize="16" TextColor="Black" FontAttributes="Bold"/>
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>

    <ShellContent ContentTemplate="{DataTemplate local:TabletPodcastPage}" Route="TabletPodcastPage"/>
    <MenuItem Text="Home" IconImageSource="house.png"  Clicked="GotoFirstPage">
    </MenuItem>
    <FlyoutItem Title="Live" Icon="live_broadcasting.png">
        <ShellContent Title="Live" Icon="live_broadcasting.png" ContentTemplate="{DataTemplate local:TabletLivePage}" Route="TabletLivePage"/>
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent Title="Settings" Icon="settings.png" ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage"/>
    </FlyoutItem>
    <MenuItem Text="Reset" IconImageSource="settings.png" Clicked="Reset"/>
    <MenuItem Text="Exit" IconImageSource="logout.png" Clicked="Quit"/>
</Shell>
