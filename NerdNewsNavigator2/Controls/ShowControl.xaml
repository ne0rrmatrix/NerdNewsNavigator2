<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="NerdNewsNavigator2.Controls.ShowControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:item="clr-namespace:NerdNewsNavigator2.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:NerdNewsNavigator2.Model"
    xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.Shared"
    x:Name="showControl"
    x:DataType="viewmodel:SharedViewModel"
    BackgroundColor="#34AAD2"
    Loaded="ContentPage_Loaded"
    mc:Ignorable="d">


    <CollectionView
        Margin="5"
        HorizontalScrollBarVisibility="Never"
        ItemsSource="{Binding Source, Source={x:Reference showControl}}"
        VerticalScrollBarVisibility="Never">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="{Binding Orientation}" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>

            <DataTemplate x:DataType="model:Show">

                <Frame
                    Margin="{OnPlatform WinUI=90,
                                        MacCatalyst=90,
                                        Android=90,
                                        iOS=90}"
                    BackgroundColor="White"
                    WidthRequest="{OnPlatform WinUI=370,
                                              MacCatalyst=370,
                                              Android=370,
                                              iOS=320}">

                    <Grid ColumnDefinitions="310,310,Auto" RowDefinitions="Auto,350,Auto,870">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=PlayGridCommand}" CommandParameter="{Binding Url}" />
                        </Grid.GestureRecognizers>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="10"
                            LineBreakMode="WordWrap"
                            Text="{Binding Title}"
                            TextColor="Black"
                            WidthRequest="300" />
                        <Image
                            Grid.Row="1"
                            Margin="10"
                            Aspect="AspectFit"
                            HeightRequest="320"
                            IsVisible="{Binding IsDownloaded}"
                            WidthRequest="320">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=PlayCommand}" CommandParameter="{Binding Url}" />
                            </Image.GestureRecognizers>
                            <Image.Source>
                                <UriImageSource
                                    CacheValidity="10:00:00:00"
                                    CachingEnabled="True"
                                    Uri="{Binding Image}" />
                            </Image.Source>
                        </Image>
                        <Image
                            Grid.Row="1"
                            Margin="10"
                            Aspect="AspectFit"
                            HeightRequest="320"
                            IsVisible="{Binding IsDownloading}"
                            WidthRequest="320">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=PlayCommand}" CommandParameter="{Binding Url}" />
                            </Image.GestureRecognizers>
                            <Image.Source>
                                <UriImageSource
                                    CacheValidity="10:00:00:00"
                                    CachingEnabled="True"
                                    Uri="{Binding Image}" />
                            </Image.Source>
                        </Image>
                        <Image
                            Grid.Row="1"
                            Margin="10"
                            Aspect="AspectFit"
                            HeightRequest="320"
                            IsVisible="{Binding IsNotDownloaded}"
                            WidthRequest="320">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=TapCommand}" CommandParameter="{Binding Url}" />
                            </Image.GestureRecognizers>
                            <Image.Source>
                                <UriImageSource
                                    CacheValidity="10:00:00:00"
                                    CachingEnabled="True"
                                    Uri="{Binding Image}" />
                            </Image.Source>
                        </Image>

                        <HorizontalStackLayout Grid.Row="2" Padding="10">

                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="Published: "
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="{Binding PubDate}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                            <Button
                                x:Name="Btn"
                                Margin="5"
                                BackgroundColor="Green"
                                FontAttributes="Bold"
                                FontSize="12"
                                HeightRequest="35"
                                IsVisible="{Binding IsNotDownloaded}"
                                Text="Download"
                                TextColor="Black"
                                WidthRequest="90">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=DownloadCommand}" CommandParameter="{Binding Url}" />
                                </Button.GestureRecognizers>
                            </Button>
                            <Button
                                Margin="5"
                                BackgroundColor="Red"
                                FontAttributes="Bold"
                                FontSize="12"
                                HeightRequest="35"
                                IsVisible="{Binding IsDownloading}"
                                Text="Cancel"
                                TextColor="Black"
                                WidthRequest="90">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=CancelCommand}" CommandParameter="{Binding Url}" />
                                </Button.GestureRecognizers>
                            </Button>
                        </HorizontalStackLayout>

                        <Label
                            Grid.Row="3"
                            FontSize="10"
                            LineBreakMode="WordWrap"
                            Text="{Binding Description}"
                            TextColor="Black"
                            TextType="Html"
                            WidthRequest="300" />
                    </Grid>

                </Frame>

            </DataTemplate>

        </CollectionView.ItemTemplate>
        <CollectionView.EmptyView>

            <ContentView>

                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

                    <Label
                        Padding="20"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Loading..."
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <ActivityIndicator IsRunning="True" Color="Red" />

                </StackLayout>

            </ContentView>

        </CollectionView.EmptyView>
    </CollectionView>
</ContentView>
