<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="NerdNewsNavigator2.Controls.ShowControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:item="clr-namespace:NerdNewsNavigator2.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:NerdNewsNavigator2.Model"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:NerdNewsNavigator2.Shared"
    x:Name="showControl"
    x:DataType="viewmodel:SharedViewModel"
    BackgroundColor="#34AAD2"
    Loaded="ContentPage_Loaded"
    mc:Ignorable="d">

    <CollectionView
        Margin="5"
        HorizontalScrollBarVisibility="Never"
        ItemsSource="{Binding Source, Source={x:Reference showControl}}"
        VerticalScrollBarVisibility="Never">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="{Binding Orientation}" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Show">
                <Frame
                    Margin="{OnPlatform WinUI=40,
                                        MacCatalyst=40,
                                        Android=40,
                                        iOS=40}"
                    BackgroundColor="White"
                    HorizontalOptions="Center">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=TapCommand}" CommandParameter="{Binding Url}" />
                    </Frame.GestureRecognizers>
                    <Grid
                        ColumnDefinitions="Auto"
                        HorizontalOptions="Center"
                        RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            LineBreakMode="WordWrap"
                            SemanticProperties.Description="Shows title of show"
                            Text="{Binding Title}"
                            TextColor="Black"
                            WidthRequest="{OnPlatform WinUI=350,
                                                      Android=340,
                                                      iOS=320,
                                                      MacCatalyst=320}" />
                        <Image
                            Grid.Row="1"
                            Aspect="AspectFit"
                            HeightRequest="{OnPlatform WinUI=350,
                                                       Android=340,
                                                       iOS=320,
                                                       MacCatalyst=320}"
                            WidthRequest="{OnPlatform WinUI=350,
                                                      Android=340,
                                                      iOS=320,
                                                      MacCatalyst=320}">
                            <Image.Source>
                                <UriImageSource
                                    CacheValidity="10:00:00:00"
                                    CachingEnabled="True"
                                    Uri="{Binding Image}" />
                            </Image.Source>
                        </Image>
                        <HorizontalStackLayout Grid.Row="2">

                            <Label
                                FontAttributes="Bold"
                                Text="Published: "
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                            <Label
                                FontAttributes="Bold"
                                SemanticProperties.Description="Shows the date the episode was published."
                                Text="{Binding PubDate}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                            <Button
                                Margin="5"
                                BackgroundColor="Green"
                                FontAttributes="Bold"
                                FontSize="{OnPlatform Default=12,
                                                      MacCatalyst=16}"
                                HeightRequest="48"
                                IsVisible="{Binding Path=IsNotDownloaded}"
                                SemanticProperties.Description="Button allows you to download a show."
                                Text="Download"
                                TextColor="White"
                                WidthRequest="90">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=DownloadCommand}" CommandParameter="{Binding Url}" />
                                </Button.GestureRecognizers>
                            </Button>
                            <Button
                                Margin="5"
                                BackgroundColor="Red"
                                FontAttributes="Bold"
                                FontSize="{OnPlatform Default=12,
                                                      MacCatalyst=16}"
                                HeightRequest="48"
                                IsVisible="{Binding Path=IsDownloading}"
                                SemanticProperties.Description="Button allows you to cancel a current download."
                                Text="Cancel"
                                TextColor="White"
                                WidthRequest="90">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SharedViewModel}}, Path=CancelCommand}" CommandParameter="{Binding Url}" />
                                </Button.GestureRecognizers>
                            </Button>
                        </HorizontalStackLayout>

                        <Label
                            Grid.Row="3"
                            FontSize="12"
                            HeightRequest="980"
                            IsVisible="True"
                            LineBreakMode="WordWrap"
                            SemanticProperties.Description="A description of episode."
                            Text="{Binding Description}"
                            TextColor="Black"
                            TextType="Html"
                            WidthRequest="{OnPlatform WinUI=340,
                                                      Android=340,
                                                      iOS=320,
                                                      MacCatalyst=320}" />
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.EmptyView>
            <ContentView>
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Label
                        Padding="20"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Loading..."
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <ActivityIndicator IsRunning="True" Color="Red" />
                </StackLayout>
            </ContentView>
        </CollectionView.EmptyView>

    </CollectionView>

</ContentView>
